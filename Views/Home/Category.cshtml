@model KeyValuePair<double, List<Wydatek>>
@{
    ViewData["Title"] = "Podsumowanie kategorii: " + Model.Value[0].Kategoria;
}

<div>
    <h2 class="text-center">@Model.Value[0].Kategoria - @Model.Key.ToString("C")</h2>
    <table class="table table-dark table-striped table-hover rounded">
        <thead>
            <tr>
                <th>Id</th>
                <th class="col-7">Opis</th>
                <th>Data</th>
                <th>Kwota</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var wydatek in Model.Value)
            {
                <tr>
                    <td>@wydatek.Id</td>
                    <td>@wydatek.Opis</td>
                    <td>@wydatek.Data.ToString("dd.MM.yyyy")</td>
                    <td>@wydatek.Kwota.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</div>