@model RejestrWydatkow.Models.Wydatek

@{
    ViewData["Title"] = "Dodaj Wydatek";
}

<h1 class="mb-4">Dodaj nowy wydatek</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Opis" class="form-label">Opis</label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Kwota" class="form-label">Kwota</label>
                <input asp-for="Kwota" class="form-control" />
                <span asp-validation-for="Kwota" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Kategoria" class="form-label">Kategoria</label>
                <input asp-for="Kategoria" class="form-control" />
                <span asp-validation-for="Kategoria" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Data" class="form-label">Data</label>
                <input asp-for="Data" type="date" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Zapisz</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
