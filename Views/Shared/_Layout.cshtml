<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WydatkiApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        /* 🌙 Dark Theme Global Styles */
        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: 'Segoe UI', sans-serif;
        }

        header, footer, .navbar {
            background-color: #1e1e1e;
            border-bottom: 1px solid #333;
        }

        .navbar a, .navbar-brand {
            color: #e0e0e0;
        }

        .navbar a:hover {
            color: #90caf9;
        }

        a, .btn-link {
            color: #90caf9;
        }

        .table-dark th, .table-dark td {
            color: #e0e0e0;
            background-color: #1e1e1e;
            border-color: #333;
        }

        .table-dark tr:hover {
            background-color: #2c2c2c;
        }

        .btn-outline-light {
            border-color: #90caf9;
            color: #90caf9;
        }

        .btn-outline-light:hover {
            background-color: #90caf9;
            color: #121212;
        }

        .btn-danger {
            background-color: #e53935;
            border: none;
        }

        .btn-danger:hover {
            background-color: #d32f2f;
        }

        .form-control, .form-select {
            background-color: #2a2a2a;
            color: #fff;
            border: 1px solid #555;
        }

        footer {
            color: #888;
            text-align: center;
            padding: 1rem;
        }

        .active-link {
            font-weight: bold;
            color: #90caf9 !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" href="/">💸 WydatkiApp</a>
                <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active-link" : "")" href="/">Strona główna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Authors" asp-controller="home">O Autorach</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-action="Add" asp-controller="home"> Dodaj Wydatek</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer>
        <div>© 2025 - WydatkiApp</div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
